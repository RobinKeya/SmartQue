<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SupportFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/top_background">

        <TextView
            android:id="@+id/support_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="@dimen/medium_spacing"
            android:textColor="#ffff"
            android:layout_marginStart="@dimen/normal_spacing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="You can Either Call or \n Send message for support or Enquiries"
            android:textSize="20sp"
            android:textColor="#ffff"
            android:layout_marginBottom="@dimen/medium_spacing"
            android:paddingBottom="@dimen/normal_spacing"
            android:paddingTop="@dimen/small_spacing"
            android:layout_marginStart="@dimen/normal_spacing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/support_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/normal_spacing"
        android:layout_marginEnd="@dimen/normal_spacing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_constraint_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0116943633"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="@dimen/normal_spacing"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat ="@drawable/ic_baseline_call_24"
            android:layout_gravity="center"
            android:paddingStart="64dp"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>